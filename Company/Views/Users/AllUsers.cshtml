@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var user = (Company.Models.AspNetUsers)ViewBag.user;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <a href="~/" style="color:blue;"> Home </a>
            / Users
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <a href="~/Users/CreateNewUser" style="color:blue;">New User</a>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12" id="data">
            <center>
                <img src="~/assets/img/loader.gif" id="loader" style="height:100px" />
            </center>
        </div>
    </div>
</div>

<script>


    $.ajax({
        type:"get",
        url: "@(Url.Content($"~/Users/ajaxAllUsers?company_id={@user.MCompanyIdFkNavigation.Id}"))",
        success: function (data) {
            $("#data").html(data);
        },
        error: function () {
            alert('Error fetching data, reload page');
        },
        complete: function () {
              $("#loader").hide();
        }
    });


</script>