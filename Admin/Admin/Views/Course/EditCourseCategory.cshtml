@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var course_category = (Admin.Models.ECourseCategory)ViewBag.course_category;
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="~/Course/EditCourseCategory">
                <div class="form-group">
                    <input type="hidden" value="@course_category.Id" name="Id" />
                    <input type="text" class="form-control" placeholder="..." required name="Category" value="@course_category.Category">
                    <small><span style="color:red;">*</span> Category Name</small>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
