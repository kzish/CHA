@{
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
    var rabbits = (List<FarmManager.Models.MRabbits>)ViewBag.rabbits;
    var rabbit = (FarmManager.Models.MRabbitsSalesRecords)ViewBag.rabbit;
}

<div class="container">
    <div class="row">

        <div class="col-md-12">
            <form action="~/RabbitsSales/EditRabbit" method="post" style="width:80%;margin:auto;">
                <input type="hidden" name="Id" value="@rabbit.Id" />
                @*row*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label><span style="color:red">*</span> NameID</label>
                            <select name="NameId" class="form-control chosen">
                                @foreach (var _rabbit in rabbits)
                                {
                                    <option value="@_rabbit.NameId" selected="@(rabbit.NameId==_rabbit.NameId)">@_rabbit.NameId</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>


                @*row*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label><span style="color:red">*</span>DateSold</label>
                            <input name="DateSold" type="text" class="form-control zebra_date" value="@rabbit.DateSold.ToString("d-MMM-yyyy")" required>
                        </div>
                    </div>
                </div>

                @*row*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label><span style="color:red">*</span>WeightKg(KG)</label>
                            <input name="WeightKg" type="number" step="any" min="0" class="form-control" value="@rabbit.WeightKg" required>
                        </div>
                    </div>
                </div>

                @*row*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            Pedigree &nbsp;<input name="Pedigree" type="checkbox" @(rabbit.Pedigree?"checked":"") value="true">
                        </div>
                    </div>
                </div>

                @*row*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label><span style="color:red">*</span>Price</label>
                            <input name="Price" type="number" step="any" min="0" value="@rabbit.Price" class="form-control">
                        </div>
                    </div>
                </div>

                @*row*@
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label><span style="color:red">*</span>BuyerName</label>
                            <input name="BuyerName" type="text" value="@rabbit.BuyerName" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label><span style="color:red">*</span>BuyerEmail</label>
                            <input name="BuyerEmail" type="email" value="@rabbit.BuyerEmail" class="form-control">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label><span style="color:red">*</span>BuyerMobile</label>
                            <input name="BuyerMobile" type="tel" value="@rabbit.BuyerMobile" class="form-control">
                        </div>
                    </div>
                </div>

                @*row*@
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label><span style="color:red">*</span>BuyerAddress</label>
                            <textarea name="BuyerAddress" class="form-control">@rabbit.BuyerAddress</textarea>
                        </div>
                    </div>
                </div>


                @*row*@
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label><span style="color:red"></span> Notes</label>
                            <textarea name="Notes" class="form-control">@rabbit.Notes</textarea>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </div>


            </form>
        </div>

    </div>
</div>
